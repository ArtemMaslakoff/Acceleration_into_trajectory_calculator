<Window x:Class="AIT_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIT_Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Задаваемые параметры" Height="30">
                <MenuItem Header="Начальные условия" Click="OpenInitialConditionPage" Height="30"/>
                <MenuItem Header="Матрицы ускорений" Click="OpenAccelerationMatricesPage" Height="30"/>
            </MenuItem>
            <MenuItem Header="Расчитываемые параметры" Height="30">
                <MenuItem Header="Точка 1 (датчик)" Click="OpenPoint1Page" Height="30"/>
                <MenuItem Header="Точка 2 (датчик)" Click="OpenPoint2Page" Height="30"/>
                <MenuItem Header="Точки 3, 4, 5, 6" Click="OpenOtherPointsPage" Height="30"/>
            </MenuItem>
            <MenuItem Header="Графики" Height="30">
                <MenuItem Header="Траектории точек 1 и 2" Click="OpenPoints1And2TrajectoriesPage" Height="30"/>
                <MenuItem Header="Анимация движения" Click="OpenAnimationPage" Height="30"/>
            </MenuItem>
            <MenuItem Header="Файл" Height="30">
                <MenuItem Header="Экспортировать" Click="OpenPoints1And2TrajectoriesPage" Height="30"/>
                <MenuItem Header="Загрузить файл" Click="OpenProject_Click" Height="30"/>
                <MenuItem Header="Сохранить файл" Click="SaveProject_Click" Height="30"/>
            </MenuItem>
        </Menu>

        <ContentControl Name="MainContentControl" Grid.Row="1"/>
    </Grid>
</Window>
