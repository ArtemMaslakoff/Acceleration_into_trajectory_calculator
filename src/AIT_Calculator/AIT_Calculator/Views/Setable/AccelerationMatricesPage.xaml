<UserControl x:Class="AIT_Calculator.Views.Setable.AccelerationMatricesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AIT_Calculator.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <local:FractionWidthConverter x:Key="ThirdWidthConverter" Fraction="0.3333" Margin="5"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Левая панель с контролами (оставляем без изменений) -->
        <Border Grid.Column="0" Style="{StaticResource CustomBorderStyle}">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Файл для импорта" Style="{StaticResource CustomTextBlockStyle}"/>
                <TextBlock x:Name="FilePathTextBlock" Text="Выберите файл..."
                           Style="{StaticResource FilePathTextBlockStyle}"/>
                <Button Content="Выбрать CSV" Click="SelectCSVFileButton_Click"
                        Style="{StaticResource CustomButtonStyle}"/>
                <Button Content="Выбрать Excel" Click="SelectXLSXFileButton_Click"
                        Style="{StaticResource CustomButtonStyle}"/>
                <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource CustomBorderStyle}">
                    <StackPanel VerticalAlignment="Center" Margin="10">
                        <TextBlock Style="{StaticResource CustomTextBlockStyle}" HorizontalAlignment="Center"
                                   Text="Шаг времени датчиков ускорения" TextAlignment="Center"/>
                        <TextBox Style="{StaticResource ValidatedTextBoxStyle}"
                                 Text="{Binding StepText, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"
                                 PreviewTextInput="TextBox_PreviewTextInput"
                                 PreviewKeyDown="TextBox_PreviewKeyDown"
                                 TextChanged="TextBox_TextChanged"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Правая панель с таблицами -->
        <Border Grid.Column="1" Style="{StaticResource CustomBorderStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Первая таблица -->
                <Border Grid.Column="0" Style="{StaticResource CustomBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Таблица ускорений"
                                   Style="{StaticResource CustomTextBlockStyle}"/>

                        <ListView Grid.Row="1" 
                                  ItemsSource="{Binding InputAcceleration1Data}"
                                  BorderThickness="0"
                                  Background="White"
                                  ItemContainerStyle="{StaticResource CustomListViewItemStyle}"
                                  ScrollViewer.VerticalScrollBarVisibility="Hidden">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Время (с)" 
                                                    HeaderContainerStyle="{StaticResource CustomGridViewColumnHeaderStyle}"
                                                    Width="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=ActualWidth, Converter={StaticResource ThirdWidthConverter}}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Time, StringFormat=N4}"
                                                           HorizontalAlignment="Center"
                                                           Margin="12 6"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Ускорение X"
                                                    HeaderContainerStyle="{StaticResource CustomGridViewColumnHeaderStyle}"
                                                    Width="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=ActualWidth, Converter={StaticResource ThirdWidthConverter}}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Parameter1, StringFormat=N4}"
                                                           HorizontalAlignment="Center"
                                                           Margin="12 6"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Ускорение Y"
                                                    HeaderContainerStyle="{StaticResource CustomGridViewColumnHeaderStyle}"
                                                    Width="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=ActualWidth, Converter={StaticResource ThirdWidthConverter}}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Parameter2, StringFormat=N4}"
                                                           HorizontalAlignment="Center"
                                                           Margin="12 6"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Border>

                <!-- Вторая таблица (аналогичная первой) -->
                <Border Grid.Column="1" Style="{StaticResource CustomBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Таблица ускорений"
                                   Style="{StaticResource CustomTextBlockStyle}"/>

                        <ListView Grid.Row="1" 
                                  ItemsSource="{Binding InputAcceleration1Data}"
                                  BorderThickness="0"
                                  Background="White"
                                  ItemContainerStyle="{StaticResource CustomListViewItemStyle}"
                                  ScrollViewer.VerticalScrollBarVisibility="Hidden">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Время (с)" 
                                                    HeaderContainerStyle="{StaticResource CustomGridViewColumnHeaderStyle}"
                                                    Width="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=ActualWidth, Converter={StaticResource ThirdWidthConverter}}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Time, StringFormat=N4}"
                                                           HorizontalAlignment="Center"
                                                           Margin="12 6"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Ускорение X"
                                                    HeaderContainerStyle="{StaticResource CustomGridViewColumnHeaderStyle}"
                                                    Width="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=ActualWidth, Converter={StaticResource ThirdWidthConverter}}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Parameter1, StringFormat=N4}"
                                                           HorizontalAlignment="Center"
                                                           Margin="12 6"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Ускорение Y"
                                                    HeaderContainerStyle="{StaticResource CustomGridViewColumnHeaderStyle}"
                                                    Width="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=ActualWidth, Converter={StaticResource ThirdWidthConverter}}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Parameter2, StringFormat=N4}"
                                                           HorizontalAlignment="Center"
                                                           Margin="12 6"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>