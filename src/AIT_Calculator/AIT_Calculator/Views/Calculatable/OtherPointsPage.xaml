<UserControl x:Class="AIT_Calculator.Views.Calculatable.OtherPointsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:AIT_Calculator.Converters"
  mc:Ignorable="d" 
  d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <local:FractionWidthConverter x:Key="ThirdWidthConverter" Fraction="0.3333" Margin="5"/>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Style="{StaticResource CustomBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource CustomTextBlockStyle}" HorizontalAlignment="Center"
                   Text="Координаты точки 3" TextAlignment="Center"/>
                <Border Grid.Row="1" Style="{StaticResource CustomBorderStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Таблица координат от времени"
                           Style="{StaticResource CustomTextBlockStyle}"/>

                        <ListView Grid.Row="1"
                          ItemsSource="{Binding Point3PositionData}"
                          BorderThickness="0"
                          Background="White"
                          ItemContainerStyle="{StaticResource CustomListViewItemStyle}"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Время (с)" 
                                            HeaderContainerStyle="{StaticResource CustomGridViewColumnHeaderStyle}"
                                            Width="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=ActualWidth, Converter={StaticResource ThirdWidthConverter}}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Time, StringFormat=N4}"
                                                   HorizontalAlignment="Center"
                                                   Margin="12 6"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Координата X"
                                            HeaderContainerStyle="{StaticResource CustomGridViewColumnHeaderStyle}"
                                            Width="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=ActualWidth, Converter={StaticResource ThirdWidthConverter}}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Parameter1, StringFormat=N4}"
                                                   HorizontalAlignment="Center"
                                                   Margin="12 6"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Координата Y"
                                            HeaderContainerStyle="{StaticResource CustomGridViewColumnHeaderStyle}"
                                            Width="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=ActualWidth, Converter={StaticResource ThirdWidthConverter}}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Parameter2, StringFormat=N4}"
                                                   HorizontalAlignment="Center"
                                                   Margin="12 6"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Border>

            </Grid>
        </Border>
        <Border Grid.Column="1" Style="{StaticResource CustomBorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Style="{StaticResource CustomTextBlockStyle}" HorizontalAlignment="Center"
           Text="Координаты точки 4" TextAlignment="Center"/>
