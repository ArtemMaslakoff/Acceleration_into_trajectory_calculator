                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Координата X"
                    HeaderContainerStyle="{StaticResource CustomGridViewColumnHeaderStyle}"
                    Width="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=ActualWidth, Converter={StaticResource ThirdWidthConverter}}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Parameter1, StringFormat=N4}"
                           HorizontalAlignment="Center"
                           Margin="12 6"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Header="Координата Y"
                    HeaderContainerStyle="{StaticResource CustomGridViewColumnHeaderStyle}"
                    Width="{Binding RelativeSource={RelativeSource AncestorType=ListView}, Path=ActualWidth, Converter={StaticResource ThirdWidthConverter}}">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Parameter2, StringFormat=N4}"
                           HorizontalAlignment="Center"
                           Margin="12 6"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Border>

            </Grid>
        </Border>
    </Grid>
</UserControl>