<UserControl x:Class="AIT_Calculator.Views.Visualizations.Points1And2TrajectoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AIT_Calculator.Views.Visualizations"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Общий заголовок -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="Траектории движения точек" 
                   FontSize="16" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="10"/>

        <!-- График для точки 1 (слева) -->
        <Border Grid.Row="1" Margin="10" 
                BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Точка 1" 
                           HorizontalAlignment="Center" Margin="5"/>

                <Canvas x:Name="Point1Canvas" Grid.Row="1" Background="White"
            SizeChanged="Canvas_SizeChanged"/>
            </Grid>
        </Border>

        <!-- График для точки 2 (справа) -->
        <Border Grid.Row="2" Margin="10" 
                BorderBrush="Gray" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Точка 2" 
                           HorizontalAlignment="Center" Margin="5"/>

                <Canvas x:Name="Point2Canvas" Grid.Row="1" Background="White"
            SizeChanged="Canvas_SizeChanged"/>
            </Grid>
        </Border>

        <!-- Для отладки (скрытые элементы) -->
        <TextBlock Grid.Row="1" Text="{Binding Point1PositionData.Count}" Visibility="Collapsed"/>
        <TextBlock Grid.Row="1" Text="{Binding Point2PositionData.Count}" Visibility="Collapsed"/>
    </Grid>
</UserControl>